- content_for :header_time, 'white-time.png'
- content_for :header_mobile, 'white-mobile.png'
- content_for :header_wifi, 'white-wifi.png'
- content_for :header_battery, 'white-battery.png'
= render "commons/headerpicture"
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field.account-name-wrapper
    .label-title= f.label :account_name
    %br/
    = f.text_field :account_name, autofocus: true, autocomplete: "username"
  .field.email-wrapper-up
    .label-title= f.label :email
    %br/
    = f.email_field :email, autocomplete: "email"
  .field.password-wrapper
    .label-title= f.label :password
    - if @minimum_password_length
      -# %em
      -#   (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  -# .field
  -#   = f.label :password_confirmation
  -#   %br/
  -#   = f.password_field :password_confirmation, autocomplete: "new-password"
  = render "devise/shared/links"
  .actions
    = f.submit "CREATE ACCOUNT", class: 'btn authentication-btn'
= image_tag 'Home Indicator.png', alt: 'ホームインディケーター', class: 'home-indi'
